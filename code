
// Pines del driver L298N
int IN1 = 9;
int IN2 = 8;
int IN3 = 7;
int IN4 = 6;

char comando;

void setup() {
  Serial.begin(9600); // ComunicaciÃ³n con Bluetooth
  pinMode(IN1, OUTPUT);
  pinMode(IN2, OUTPUT);
  pinMode(IN3, OUTPUT);
  pinMode(IN4, OUTPUT);
}

// Funciones de movimiento
void adelante() {
  digitalWrite(IN1, HIGH);
  digitalWrite(IN2, LOW);
  digitalWrite(IN3, HIGH);
  digitalWrite(IN4, LOW);
}

void atras() {
  digitalWrite(IN1, LOW);
  digitalWrite(IN2, HIGH);
  digitalWrite(IN3, LOW);
  digitalWrite(IN4, HIGH);
}

void izquierda() {
  digitalWrite(IN1, LOW);
  digitalWrite(IN2, HIGH);
  digitalWrite(IN3, HIGH);
  digitalWrite(IN4, LOW);
}

void derecha() {
  digitalWrite(IN1, HIGH);
  digitalWrite(IN2, LOW);
  digitalWrite(IN3, LOW);
  digitalWrite(IN4, HIGH);
}

void parar() {
  digitalWrite(IN1, LOW);
  digitalWrite(IN2, LOW);
  digitalWrite(IN3, LOW);
  digitalWrite(IN4, LOW);
}

void loop() {
  if (Serial.available() > 0) {
    comando = Serial.read();

    if (comando == 'F') adelante();   // Forward
    if (comando == 'B') atras();      // Backward
    if (comando == 'L') izquierda();  // Left
    if (comando == 'R') derecha();    // Right
    if (comando == 'S') parar();      // Stop
  }
}
